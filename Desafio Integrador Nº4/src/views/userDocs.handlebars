<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 text-center text-dark">DOCUMENTOS</h1>
            <hr class="hr-divider">

            <form>
                {{#if error}}
                <div class="alert alert-danger">
                    {{error}}
                </div>
                {{/if}}
                {{#if message}}
                <div class="alert alert-success">
                    {{message}}
                </div>
                {{/if}}

                <div class="form-group">
                    <label for="Documento" class="form-label"><strong>INSERTE DOCUMENTO</strong></label>
                    <div class="input-group">
                        <input type="file" class="form-control m-1" id="Documento">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary btn-lg">ADJUNTAR</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Perfil" class="form-label"><strong>INSERTE IMAGEN DE PERFIL</strong></label>
                    <div class="input-group">
                        <input type="file" class="form-control m-1" id="Perfil">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary btn-lg">ADJUNTAR</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Producto" class="form-label"><strong>INSERTE IMAGEN DE PRODUCTO</strong></label>
                    <div class="input-group">
                        <input type="file" class="form-control m-1" id="Producto">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary btn-lg">ADJUNTAR</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{{>menu2}}
</div>
