<h1 class="text-center mt-4">View Products</h1>
<hr />
<h2 class="text-center">Lista de productos:</h2>
<div class="container">
  <div class="container-forms">
    <div class="card">
      <div class="card-body">
        <h2>AGREGAR PRODUCTO</h2>
        <form id="addProductForm">
          <div class="form-group">
            <label for="title">TITLE</label>
            <input name="title" type="text" class="form-control" />
          </div>
          <div class="form-group">
            <label for="description">DESCRIPTION</label>
            <input name="description" type="text" class="form-control" />
          </div>
          <div class="form-group">
            <label for="code">CODE</label>
            <input name="code" type="text" class="form-control" />
          </div>
          <div class="form-group">
            <label for="price">PRICE</label>
            <input name="price" type="number" class="form-control" />
          </div>
          <div class="form-group">
            <label for="stock">STOCK</label>
            <input name="stock" type="number" class="form-control" />
          </div>
          <div class="form-group">
            <label for="category">CATEGORY</label>
            <input name="category" type="text" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary mt-2">Agregar Producto</button>
        </form>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h2>BORRAR PRODUCTO</h2>
        <form id="deleteProductForm">
          <div class="form-group">
            <label for="deleteID">ID</label>
            <input id="deleteID" type="text" class="form-control" />
          </div>
          <button type="submit" class="btn btn-danger mt-2">BORRAR</button>
        </form>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <h2>Accion realizada:</h2>
    <div id="resFetch"></div>
  </div>

  <div id="container-products">
    {{#each products}}
      <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title">{{this.title}}</h4>
          <p class="card-text">code: {{this.code}} ID: {{this.id}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/viewsProducts.js"></script>